    <!-- 관리자레이아웃 시작 --><!-- core -->
    <definition name="core-tpl" template="/WEB-INF/layouts/core-layout/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/layouts/core-layout/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layouts/core-layout/footer.jsp"/>
    </definition>

    <definition name="core/*" extends="core-tpl">
        <put-attribute name="body" value="/WEB-INF/core/views/{1}.jsp"/>
    </definition>

    <definition name="core/*/*" extends="core-tpl">
        <put-attribute name="body" value="/WEB-INF/core/views/{1}/{2}.jsp"/>
    </definition>

    <definition name="base-popup-template" template="/WEB-INF/core/layouts/popup/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/core/layouts/popup/header.jsp"/>
        <put-attribute name="body" value=""/>
    </definition>

    <definition name="core/*/popup/*" extends="base-popup-template">
        <put-attribute name="body" value="/WEB-INF/core/views/{1}/popup/{2}.jsp"/>
    </definition>

    <definition name="no-template" template="/WEB-INF/core/layouts/default/none.jsp">
        <put-attribute name="body" value=""/>
    </definition>

