<tiles-definitions>
    <definition name="main-tpl" template="/WEB-INF/layouts/main/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/layouts/main/header.jsp"/>
        <put-attribute name="scripts" value="/WEB-INF/layouts/main/scripts.jsp"/>
        <put-attribute name="styles" value="/WEB-INF/layouts/main/styles.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layouts/main/footer.jsp"/>
    </definition>
    <definition name="tab-main-tpl" template="/WEB-INF/layouts/main/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/layouts/main/header.jsp"/>
        <put-attribute name="scripts" value="/WEB-INF/layouts/main/scripts.jsp"/>
        <put-attribute name="styles" value="/WEB-INF/layouts/main/styles.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layouts/main/footer.jsp"/>
    </definition>

    <definition name="popup-tpl" template="/WEB-INF/layouts/popup/layout.jsp">
        <put-attribute name="scripts" value="/WEB-INF/layouts/popup/scripts.jsp"/>
        <put-attribute name="styles" value="/WEB-INF/layouts/popup/styles.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layouts/popup/footer.jsp"/>
    </definition>

    <definition name="shep-tpl/*/*" template="/WEB-INF/layouts/default/none.jsp">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    </definition>

    <!-- ## -->
    <definition name="views/*/*" extends="shep-tpl">
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    </definition>
    <definition name="views/*/popup/*" extends="popup-tpl">
        <put-attribute name="body" value="/WEB-INF/views/{1}/popup/{2}.jsp"/>
    </definition>

    <definition name="main/*" extends="main-tpl">
        <put-attribute name="body" value="/WEB-INF/views/main/{1}.jsp"/>
    </definition>
